<Page
    x:Class="InfoKioskVIKK.Tunniplaan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InfoKioskVIKK"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Frame x:ConnectionId='1'      Grid.Row="1"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    Padding="20"
                    Name="contentFrame"
                    Background="AntiqueWhite">
            <Rectangle Fill="Beige"></Rectangle>
        </Frame>

        <Pivot>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon
                            HorizontalAlignment="Center"
                            Glyph="&#xE716;"
                            FontSize="16"></FontIcon>
                        <TextBlock Text="Grupp" Foreground="Teal"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
                <StackPanel>
                    <TextBlock x:ConnectionId='2' Name="sisuBlock" Text="Sisu1"></TextBlock>
                </StackPanel>
            </PivotItem>
            

            <PivotItem>
                
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon
                            HorizontalAlignment="Center"
                            Glyph="&#xE77B;"
                            FontSize="16"></FontIcon>
                        <TextBlock Text="Õpetaja" Foreground="Teal"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
            </PivotItem>
            
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon
                            HorizontalAlignment="Center"
                            Glyph="&#xE80F;"
                            FontSize="16"></FontIcon>
                        <TextBlock Text="Ruum" Foreground="Teal"></TextBlock>
                    </StackPanel>
                </PivotItem.Header>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

